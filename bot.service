[Unit]
Description=Binance Trade Bot
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/bogavax
ExecStart=/home/ubuntu/bogavax/venv/bin/python /home/ubuntu/bogavax/bot.py

# ðŸ”‘ ENV DOSYASINI BURADA YÃœKLÃœYORUZ
EnvironmentFile=/home/ubuntu/bogavax/.env

Restart=always
RestartSec=30
StandardOutput=append:/home/ubuntu/bogavax/log.txt
StandardError=append:/home/ubuntu/bogavax/log.txt
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target